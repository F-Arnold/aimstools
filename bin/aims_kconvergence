#!/usr/bin/env python
import argparse
from AIMS_tools.misc import *
from AIMS_tools.workflows import k_convergence


def parseArguments():
    # Create argument parser
    parser = argparse.ArgumentParser()

    # Positional mandatory arguments
    parser.add_argument("input", help="Path to input files", type=str)

    # Optional arguments
    parser.add_argument(
        "-t", "--submit", help="submission script", type=str, default=None,
    )
    parser.add_argument(
        "-l",
        "--k_limits",
        help="Upper and lower limit to check k-points.",
        nargs="+",
        type=int,
        default=[4, 30],
    )
    # Parse arguments
    args = parser.parse_args()
    return args


if __name__ == "__main__":
    args = parseArguments()
    geometry = args.input
    job = k_convergence(geometry, **vars(args))

